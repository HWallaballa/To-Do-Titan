<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javagiants.todolist.controllers.TaskController">
    <Label text="To-Do List"/>
    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="descriptionField" promptText="Description"/>
    <Button text="Add Task" onAction="#handleAddTask"/>
    <ListView fx:id="taskListView"/>
</VBox>
